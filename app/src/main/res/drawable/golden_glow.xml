<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="#FFFFDD1A"
                android:endColor="#00FFDD1A"
                android:gradientRadius="600"
                android:type="radial" />
            <corners android:radius="@dimen/round_corner" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/design_default_color_background" />
        </shape>
    </item>

</layer-list>