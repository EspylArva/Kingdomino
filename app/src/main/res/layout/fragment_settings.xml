<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="vmStatic" type="com.iteration.kingdomino.ui.settings.SettingsFragment.Companion" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings.SettingsFragment">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dis">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_confirm_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_confirm_on_play"
            android:checked="@={vmStatic.confirmOnPlay}"/>

        </LinearLayout>

    </FrameLayout>
</layout>
