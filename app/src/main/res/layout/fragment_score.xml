<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.game.ScoreFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout_score_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recycler_score_players">
            <TextView
                android:id="@+id/lbl_score_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24/09/2022"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/lbl_score_game_type"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginStart="@dimen/dis"
                android:layout_marginEnd="@dimen/dis"
                />
            <TextView
                android:id="@+id/lbl_score_game_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4P Game, No modifier"
                app:layout_constraintStart_toEndOf="@id/lbl_score_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_score_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout_score_header"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </LinearLayout>

</FrameLayout>